generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Professor {
  nome_prof      String
  id             String  @unique @default(uuid())
  cod_disciplina Int[]
  cod_prof       Int     @id @unique @default(autoincrement())
  email_prof     String?
  tel_prof       String

  @@map("professors")
}

model Disciplina {
  id              String @unique @default(uuid())
  cod_disciplina  Int    @id @default(autoincrement())
  nome_disciplina String

  @@map("disciplinas")
}

model Aluno {
  cod_aluno  String @unique @default(uuid())
  cod_turma  Int
  cod_resp   Int
  matricula  Int    @id @unique @default(autoincrement())
  nome_aluno String
  data_nasc  DateTime @db.Date

  @@map("alunos")
}

model Responsavel {
  id         String  @unique @default(uuid())
  cod_resp   Int
  cod_aluno  Int
  nome_resp  String
  tel_resp   String?
  email_resp String?

  @@id([cod_resp, cod_aluno])
  @@map("responsaveis")
}

model Turma {
  id         String @unique @default(uuid())
  cod_turma  Int    @id @unique @default(autoincrement())
  nome_turma String
  sala_aula  Int

  @@map("turmas")
}

model Periodo {
  id          String @unique @default(uuid())
  cod_periodo Int    @id @unique @default(autoincrement())
  periodo     String

  @@map("periodos")
}

model Aula {
  id             String   @unique @default(uuid())
  cod_turma      Int
  cod_periodo    Int
  cod_prof       Int
  cod_disciplina Int
  dia_semana     String
  data_aula      DateTime

  @@id([cod_turma, cod_periodo, cod_disciplina, dia_semana])
  @@map("aulas")
}

model Presenca {
  id             String   @unique @default(uuid())
  cod_aluno      String
  cod_disciplina Int
  data_presenca  DateTime
  status         String

  @@id([cod_aluno, cod_disciplina, data_presenca])
  @@map("presencas")
}
